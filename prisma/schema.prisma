generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int     @id @default(autoincrement())
  name      String  @default("Missingno")  @db.VarChar(100)
  stars     Int     @default(1)
  font      String  @default("Montserrat") @db.VarChar(100)
  hat       String  @default("")           @db.VarChar(100)
  card      String  @default("")           @db.VarChar(100)
  animation String  @default("")           @db.VarChar(100)

  logs logs[]
}

model tasks {
  id          Int    @id @default(autoincrement())
  title       String @db.VarChar(100)
  description String @db.VarChar(500)
  reward      Int
  active      Boolean @default(true)
}

model webhooks {
  name        String  @db.VarChar(500)
  webhook     String  @db.VarChar(500)
  id          Int     @id @default(autoincrement())
  showTasks   Boolean @default(true)
  showTampers Boolean @default(false)
}

model logins {
  id      Int @id @default(autoincrement())
  token   String
  expires DateTime
}

model logs {
  id        Int      @id @default(autoincrement())
  user_id   Int
  action    String
  timestamp DateTime @default(now())

  User users @relation(fields: [user_id], references: [id])
}

model tamperEvidentMessages {
  id        Int       @id @default(autoincrement())
  uuid      String    @unique
  title     String
  message   String
  opened    Boolean   @default(false)
  timestamp DateTime?
}

model shop {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(100)
  description String  @db.VarChar(500)
  type        String  @db.VarChar(100)
  cost        Int
  active      Boolean @default(true)
}